---
interface Props {
  src: string;
  alt: string;
  number: number;
  title: string;
  subtitle: string;
}
const { src, alt, number, title, subtitle }: Props = Astro.props;
---

<li class="flex gap-8">
  <img src={src} alt={alt} class="max-w-[120px]" />
  <div class="flex flex-col justify-between">
    <span class="text-hd-md text-brand-silver"
      >{number.toLocaleString().padStart(2, "0")}</span
    >
    <a href="#"
      ><h3
        class="text-hd-xs text-brand-dark-blue transition-all hover:text-brand-vermillion"
      >
        {title}
      </h3>
    </a>
    <p>{subtitle}</p>
  </div>
</li>
