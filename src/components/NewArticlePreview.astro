---
interface Props {
  title: string;
  subtitle: string;
  last?: boolean;
}
const { title, subtitle, last }: Props = Astro.props;
---

<li class="grid gap-2 border-b border-[#5E607A] pb-8 last:border-0 last:pb-0">
  <a href="#">
    <h3 class="text-hd-sm transition-all hover:text-brand-yellow">{title}</h3>
  </a>
  <p class="text-brand-silver">{subtitle}</p>
</li>
